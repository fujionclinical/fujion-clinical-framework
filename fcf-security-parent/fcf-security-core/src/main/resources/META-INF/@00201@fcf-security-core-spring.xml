<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context  
        http://www.springframework.org/schema/context/spring-context.xsd">

	<beans profile="root">

		<context:component-scan base-package="org.fujionclinical.security" />
		
		<bean id="securityAuthenticationDetailsSource"
			class="org.fujionclinical.security.FCFAuthenticationDetailsSource" />
		
		<bean id="securityLogoutSuccessHandler"
			class="org.springframework.security.web.authentication.logout.SimpleUrlLogoutSuccessHandler">
			<property name="targetUrlParameter" value="TARGET_URL" />
		</bean>
		
		<bean id="securityAuthenticationProvider" 
			class="org.fujionclinical.security.BaseAuthenticationProvider" />
		
	</beans>
	
	<beans profile="child">
	
		<bean id="securityPasswordChangeController" scope="prototype"
			class="org.fujionclinical.security.controller.PasswordChangeController">
			<property name="securityService" ref="securityService" />
		</bean>

	</beans>

</beans>