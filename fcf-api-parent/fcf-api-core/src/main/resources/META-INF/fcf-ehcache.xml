<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" 
	updateCheck="true"
	monitoring="autodetect" 
	dynamicConfig="true">

	<diskStore path="${org.fujionclinical.dir.cache}" />
	
	<cache name="org.fujionclinical.api.messaging" 
		maxEntriesLocalHeap="${org.fujionclinical.messaging.cache.size}"
		maxEntriesLocalDisk="${org.fujionclinical.messaging.cache.size}" 
		eternal="false" 
		diskSpoolBufferSizeMB="10"
		timeToIdleSeconds="${org.fujionclinical.messaging.cache.life}" 
		timeToLiveSeconds="0"
		memoryStoreEvictionPolicy="LRU" 
		transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>

</ehcache>