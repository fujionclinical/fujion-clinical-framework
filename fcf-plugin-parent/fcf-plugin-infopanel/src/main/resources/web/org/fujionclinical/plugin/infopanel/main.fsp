<page>
	<paneview name="infoPanelRoot" width="100%" height="100%" orientation="vertical"
		class="fcf-infopanel" controller="${@fcfInfoPanelController}">
		<pane name="infoPanel" flex="1">
			<div class="panel panel-primary fcf-infopanel-panel">
				<div name="menuPanel" class="panel-heading" visible="false">
					<toolbar name="menubar"
						style="background: none; border: none" height="20px" />
				</div>
				<div flex="1">
					<div name="dropRoot" style="padding:5px" flex="1" />
				</div>
			</div>
		</pane>
		<pane name="alertPanel" height="30px" visible="false">
			<div class="panel panel-danger fcf-infopanel-panel">
				<div class="panel-heading"
					forward="dblclick=alertIcon.click">
					<label name="alertTitle" class="panel-title"
						label="${@msg.fcf.infopanel.alert.title}" />
					<span name="alertIcon"
						class="panel-icons panel-icon glyphicon glyphicon-chevron-down" />
				</div>
				<grid name="alertGrid" flex="1"
					class="fcf-infopanel-alertgrid">
					<rows name="alertRoot" />
				</grid>
			</div>
		</pane>
	</paneview>

	<style>
		.fcf-infopanel-panel {
			margin: 0;
			overflow: hidden;
			display: flex;
			flex: 1;
		}
		
		.fcf-infopanel-panel>.panel-heading {
			zoom: 0.8;
		}
		
		.fcf-infopanel-container { 
			padding-top: 10px; 
			padding-bottom: 10px; 
		}

		.fcf-infopanel-container .z-panel-header { 
			color: #000000;
			font-family: arial; 
			padding: 2px 5px 1px; 
			text-align: center;
			border-bottom: solid lightBlue 1px !important; 
			background: transparent; 
		}

		.fcf-infopanel-alertgrid { 
			border-style: none; 
			overflow: auto; 
		}
	</style>

</page>
