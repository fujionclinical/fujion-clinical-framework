<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="child">

        <!-- Shared clinical contexts. -->

        <bean id="patientContext" parent="managedContext"
              class="org.fujionclinical.api.model.patient.PatientContext">
        </bean>

        <bean id="encounterContext" parent="managedContext" depends-on="patientContext"
              class="org.fujionclinical.api.model.encounter.EncounterContext">
        </bean>

    </beans>

</beans>
