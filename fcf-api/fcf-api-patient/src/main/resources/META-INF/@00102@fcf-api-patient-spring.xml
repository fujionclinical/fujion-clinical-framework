<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="child">

        <!-- Shared clinical contexts. -->

        <bean id="patientContext" parent="managedContext"
              class="org.fujionclinical.api.patient.PatientContext">
        </bean>

        <!-- Patient lists -->

        <bean id="patientListRegistry"
              class="org.fujionclinical.api.patient.list.PatientListRegistry"
              depends-on="userContext" />

        <bean id="patientList" abstract="true" />

        <bean id="patientListMRU" parent="patientList"
              class="org.fujionclinical.api.patient.list.MRUPatientList">
            <constructor-arg type="java.lang.String" value="FCF.PATIENT.LIST.MRU" />
        </bean>

        <bean id="patientListPersonal" parent="patientList"
              class="org.fujionclinical.api.patient.list.PersonalPatientList">
            <constructor-arg type="java.lang.String" value="FCF.PATIENT.LIST.PERSONAL" />
        </bean>

        <bean id="patientListFavorites" parent="patientList"
              class="org.fujionclinical.api.patient.list.FavoritePatientList">
        </bean>

    </beans>

</beans>
